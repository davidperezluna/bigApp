{% extends 'base.html.twig' %}


{% block body %}
<div class="container">
  <div class="panel panel-default">
      <div class="panel-heading">
          <h3 class="panel-default"><span class="icon-user"></span>Nuevo</h3>                                        
      </div>
      <div class="panel-body">                                    
          {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}   
                  <div class="form-group">
                      <label class="col-md-2 control-label">Nombres</label>
                      <div class="col-md-10">
                         {{ form_widget(form.nombres, {'attr': {'class': 'form-control','placeholder': "Digite Nombres"}}) }}
                      </div>
                  </div>
                  <div class="form-group">
                      <label class="col-md-2 control-label">Apellidos</label>
                      <div class="col-md-10">
                         {{ form_widget(form.apellidos, {'attr': {'class': 'form-control','placeholder': "Digite Apellidos"}}) }}
                      </div>
                  </div>
                  <div class="form-group">
                      <label class="col-md-2 control-label">Celular</label>
                      <div class="col-md-10">
                         {{ form_widget(form.celular, {'attr': {'class': 'form-control','placeholder': "Digite Celular"}}) }}
                      </div>
                  </div>
                   
                  <div class="form-group">
                      <label class="col-md-2 control-label">Correo</label>
                      <div class="col-md-10">
                         {{ form_widget(form.email, {'attr': {'class': 'form-control','placeholder': "Digite Correo"}}) }}
                      </div>
                  </div>
                  <div class="form-group">
                      <label class="col-md-2 control-label">Role</label>
                      <div class="col-md-10">
                            {{ form_widget(form.rolePersona, {'attr': {'class': 's2-select-search form-control'}}) }}
                      </div>
                  </div>
                  
               
                  <div class="form-group">
                      <label class="col-md-2 control-label">Contrase単a</label>
                      <div class="col-md-10">
                         {{ form_widget(form.password.first, {'attr': {'class': 'form-control','placeholder': "Digite Su Contrase単a"}}) }}
                      </div>
                  </div>
                  <div class="form-group">
                      <label class="col-md-2 control-label">Repita la Contrase単a</label>
                      <div class="col-md-10">
                         {{ form_widget(form.password.second, {'attr': {'class': 'form-control','placeholder': "Confirme Su Contrase単a"}}) }}
                      </div>
                  </div>
                                   
              {{ form_widget(form) }}
      </div>
      <div class="panel-footer">   
          <div class="panel-elements pull-right">
              <a href="{{ path('user_index') }}"  class="btn  btn-default btn-clean btn-glow margin-right-5">Cancelar</a>
            <button type="submit" class="btn btn-primary btn-icon-fixed"><span class="icon-chevron-right-circle"></span> Registrar</button>
          </div>                                        
      </div>
      {{ form_end(form) }}
  </div>
</div>

{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script src="{{ asset('build/js/vendor/bootstrap-select/bootstrap-select.js') }}" type="text/javascript"></script>
    <script src="{{ asset('build/js/vendor/select2/select2.full.min.js') }}" type="text/javascript"></script>
     <script src="{{ asset('build/js/vendor/cropper/cropper.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('build/js/vendor/dropzone/dropzone.js') }}" type="text/javascript"></script>
    <script type="text/javascript">
        
    </script>
{% endblock %}
