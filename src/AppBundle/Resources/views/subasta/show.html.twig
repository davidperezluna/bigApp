{% extends 'base.html.twig' %}

{% block body %}
    <h1>Subastum</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ subastum.id }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if subastum.createdAt %}{{ subastum.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Peticion</th>
                <td>{{ subastum.peticion }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('subasta_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('subasta_edit', { 'id': subastum.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
