{% extends 'base.html.twig' %}

{% block body %}
   
<div class="container">
  <!-- BASIC INPUTS -->
  <div class="block">                        
      <div class="app-heading app-heading-small">                                
          <div class="title">
              <h2>Crear Subasta</h2>
          </div>                                
      </div>
       {{ form_start(form) }}
        <div class="form-group">
          <label class="col-md-2 control-label">Peticion</label>
          <div class="col-md-10">
              {{ form_widget(form.peticion, {'attr': {'class': 'form-control'}}) }}
          </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Categoria</label>
              <div class="col-md-10">
                  {{ form_widget(form.categoria, {'attr': {'class': 's2-select-search form-control'}}) }}
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-2 control-label">Municipio</label>
              <div class="col-md-10">
                  {{ form_widget(form.municipio, {'attr': {'class': 's2-select-search form-control'}}) }}
            </div>
        </div>
        <div class="pull-right">
              <hr>
               <a href="{{ path('homepage') }}" class="btn btn-default">Cancelar</a>
              <button type="submit" class="btn btn-primary btn-icon-fixed"><span class="icon-chevron-right-circle"></span> Registrar</button>
          </div>
      {{ form_end(form) }}

  </div>
</div>
{% endblock %}

{% block javascripts %}
{{parent()}}

<script src="{{ asset('build/js/vendor/select2/select2.full.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('build/js/vendor/bootstrap-select/bootstrap-select.js') }}" type="text/javascript"></script>
<script src="{{ asset('build/js/vendor/bootstrap-tagsinput/bootstrap-tagsinput.js') }}" type="text/javascript"></script>
{% endblock %}
