{% extends 'base.html.twig' %}

{% block body %}
   
<div class="container">
  <!-- BASIC INPUTS -->
  <div class="block">                        
      <div class="app-heading app-heading-small">                                
          <div class="title">
              <h2>Seleccionar Productos</h2>
          </div>                                
      </div>
       {{ form_start(form) }}
        <div class="col-md-12">
            <label>Seleccione los productos de la lista o filtre por nombre o referencia del producto</label>
            <select class="s2-select form-control" multiple name="productos[]">
                {% for producto in productosEmpresa %}
                <option value="{{producto.id}}">{{producto.referencia}}-{{producto.nombre}}</option>
                {% endfor %}
            </select>
        </div>
        <div class="pull-right">
              <hr>
               <a href="{{ path('empresa_index') }}" class="btn btn-default">Cancelar</a>
              <button type="submit" class="btn btn-primary btn-icon-fixed"><span class="icon-chevron-right-circle"></span> Registrar</button>
        </div>
      {{ form_end(form) }}
  </div>
</div>
{% endblock %}
{% block javascripts %}
<script src="{{ asset('build/js/vendor/bootstrap-select/bootstrap-select.js') }}" type="text/javascript"></script>
<script src="{{ asset('build/js/vendor/select2/select2.full.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('build/js/vendor/multiselect/jquery.multi-select.js') }}" type="text/javascript"></script>
{% endblock %}